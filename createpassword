	private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {
		final long serialVersionUID = 1L;
		Clipboard clipboard;
		clipboard = Toolkit.getDefaultToolkit().getSystemClipboard(); //获得系统剪贴板
		Transferable contents1 = clipboard.getContents(this);
		StringSelection contents = new StringSelection(jTextField2.getText());
		clipboard.setContents(contents, createpassword.this);
		if(jTextField2.getText().length() != 0){
			JOptionPane.showMessageDialog(null, "密码已经被复制到了粘贴板！");
		} else
		{
			JOptionPane.showMessageDialog(null, "老兄，你还没生成密码吧，还等什么，赶紧生啊！");
		}
	}

	private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {
		String str = jTextField1.getText();
		int length = Integer.parseInt(str);
		if (length < 1 || length > 18) {
			JOptionPane.showMessageDialog(null, "密码长度不能大于18或小于0");
		}
		if (jCheckBox1.isSelected() && jCheckBox2.isSelected()
				&& jCheckBox3.isSelected() && jCheckBox4.isSelected()) {
			jTextField2.setText(RandomPassword
					.RandomSymbolAndLowerAndUpperAndNum(length));

		} else if (jCheckBox1.isSelected() && jCheckBox2.isSelected()
				&& jCheckBox3.isSelected()) {
			jTextField2.setText(RandomPassword
					.RandomNumAndUpperAndLower(length));

		} else if (jCheckBox1.isSelected() && jCheckBox3.isSelected()
				&& jCheckBox4.isSelected()) {
			jTextField2.setText(RandomPassword
					.RandomSymbolAndUpperAndNum(length));

		} else if (jCheckBox1.isSelected() && jCheckBox2.isSelected()
				&& jCheckBox4.isSelected()) {
			jTextField2.setText(RandomPassword
					.RandomSymbolAndLowerAndNum(length));
		} else if (jCheckBox3.isSelected() && jCheckBox4.isSelected()) {
			jTextField2.setText(RandomPassword.RandomSymbolAndUpper(length));

		} else if (jCheckBox2.isSelected() && jCheckBox4.isSelected()) {
			jTextField2.setText(RandomPassword.RandomSymbolAndLower(length));

		} else if (jCheckBox2.isSelected() && jCheckBox3.isSelected()) {
			jTextField2.setText(RandomPassword.RandomUpperAndLower(length));

		} else if (jCheckBox1.isSelected() && jCheckBox4.isSelected()) {
			jTextField2.setText(RandomPassword.RandomSymbolAndNum(length));

		} else if (jCheckBox1.isSelected() && jCheckBox3.isSelected()) {
			jTextField2.setText(RandomPassword.RandomNumAndUpper(length));

		} else if (jCheckBox1.isSelected() && jCheckBox2.isSelected()) {
			jTextField2.setText(RandomPassword.RandomNumAndLower(length));

		} else if (jCheckBox4.isSelected()) {
			jTextField2.setText(RandomPassword.RandomSymbol(length));

		} else if (jCheckBox3.isSelected()) {
			jTextField2.setText(RandomPassword.RandomUpper(length));

		} else if (jCheckBox2.isSelected()) {
			jTextField2.setText(RandomPassword.RandomLetters(length));

		} else if (jCheckBox1.isSelected()) {
			jTextField2.setText(RandomPassword.RandomNum(length));
		} else {
			JOptionPane.showMessageDialog(null, "宝贝儿你又调皮了！");
		}
	}

